<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project 1</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    {{! Central container for site }}
    <div class="container mt-5">
      {{! Central row for site }}
      <div class="row justify-content-start">
        {{! Navigation Column }}
        <section class="col-2">
          {{! Navigation Bar }}
          <ul class="nav flex-column">
            <li class="nav-item"><a
                href="#"
                class="nav-link"
                data-nav-id=""
              >Home</a></li>
            <li class="nav-item"><a
                href="#"
                class="nav-link"
                data-nav-id="search"
              >Search</a></li>
            <li class="nav-item"><a href="#" class="nav-link" data-nav-id="">New
                Collection</a></li>
            <li class="nav-item"><a href="#" class="nav-link" data-nav-id="">New
                Card</a></li>
            <li class="nav-item"><a
                href="#"
                class="nav-link"
                data-nav-id=""
              >Pinned Cards</a></li>
            <li class="nav-item"><a
                href="#"
                class="nav-link"
                data-nav-id=""
              >Tags</a></li>
          </ul>
        </section>
        <section class="col-10">
          <div class="container">
            <div class="row justify-content-start">
              {{! Column for vertical divider }}
              <div class="col-1 d-flex nav-divider">
                <div class="vr"></div>
              </div>
              {{! Column for body }}
              <div class="col-11" style="position: relative;">
                {{! Main handlebars body }}
                <div>
                  {{{body}}}
                </div>
                {{! Floating Account section }}
                <div>
                  <div class="fs-5" id="my-account-interface">
                    <a href="#">My Account</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
    {{! Modals }}
    <div>
      {{! Search Modal }}
      <div class="container">
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-fullscreen">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                  Search For:
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                ...
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{! Bootstrap script }}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    {{! Local index script }}
    <script src="/js/index.js"></script>
  </body>
</html>